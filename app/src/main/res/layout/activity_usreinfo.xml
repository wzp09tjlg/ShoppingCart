<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_usreinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#999999">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:gravity="center_vertical"
    android:background="@color/headbg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户信息"
        android:textSize="20dp"
        android:textColor="@color/color_ffffff"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改"
        android:layout_marginRight="20dp"
        android:textColor="@color/color_ffffff"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_white_smooth"
        android:layout_margin="5dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="名字"
            android:gravity="center"/>

        <TextView
            android:id="@+id/userinfo_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:text="个人信息"
            android:textColor="@color/color_333333"
            android:textSize="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/bg_white_smooth"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="性别"
            android:gravity="center"/>

        <TextView
            android:id="@+id/userinfo_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:text="个人信息"
            android:textColor="@color/color_333333"
            android:textSize="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/bg_white_smooth"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="电话"
            android:gravity="center"/>

        <TextView
            android:id="@+id/userinfo_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:text="个人信息"
            android:textColor="@color/color_333333"
            android:textSize="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/bg_white_smooth"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:gravity="center"/>

        <TextView
            android:id="@+id/userinfo_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:text="个人信息"
            android:textColor="@color/color_333333"
            android:textSize="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/bg_white_smooth"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="住址"
            android:gravity="center"/>
        <TextView
            android:id="@+id/userinfo_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:text="个人信息"
            android:textColor="@color/color_333333"
            android:textSize="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">
        <Button
            android:id="@+id/bt_manager_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="切换管理员账户"
            android:background="@color/color_ff9600"/>
    </LinearLayout>
</LinearLayout>
